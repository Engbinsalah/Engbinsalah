<section class="section categories">
  <div class="section-header">
    <p class="eyebrow">{{ section.settings.eyebrow }}</p>
    <h2>{{ section.settings.heading }}</h2>
  </div>
  <div class="category-grid">
    {% for block in section.blocks %}
      <a class="category-card" href="{{ block.settings.link }}">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url: width: 360 }}" alt="{{ block.settings.title }}" loading="lazy">
        {% endif %}
        <div class="category-info">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      </a>
    {% else %}
      <div class="placeholder">Add category blocks to spotlight your top collections.</div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured categories",
  "settings": [
    {"type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Shop by category"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Explore essentials"}
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {"type": "text", "id": "title", "label": "Title", "default": "Kitchen Tools"},
        {"type": "textarea", "id": "description", "label": "Description", "default": "Prep, cook, and serve with ease."},
        {"type": "url", "id": "link", "label": "Link", "default": "/collections/kitchen"},
        {"type": "image_picker", "id": "image", "label": "Image"}
      ]
    }
  ],
  "presets": [{"name": "Featured categories", "category": "Collections"}]
}
{% endschema %}
